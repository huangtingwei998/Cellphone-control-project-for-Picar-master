<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/cameraDisplay"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text=""
                android:id="@+id/imageViewSize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Dir"
                android:id="@+id/textViewDir"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDirForward"
                android:layout_above="@+id/textViewDir"
                android:layout_centerHorizontal="true"
                android:text="F"
                android:layout_margin="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDirBack"
                android:layout_below="@+id/textViewDir"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="B" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDirLeft"
                android:layout_toLeftOf="@+id/textViewDir"
                android:layout_centerVertical="true"

                android:text="L" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDirRight"
                android:layout_toRightOf="@+id/textViewDir"
                android:layout_centerVertical="true"
                android:text="R" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonClose"
                android:layout_alignParentBottom="true"
                android:text="close"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cam"
                android:id="@+id/textViewCam"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCamUp"
                android:layout_above="@+id/textViewCam"
                android:layout_centerHorizontal="true"
                android:text="U"
                android:layout_margin="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCamDown"
                android:layout_below="@+id/textViewCam"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="D" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCamLeft"
                android:layout_toLeftOf="@+id/textViewCam"
                android:layout_centerVertical="true"

                android:text="L" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCamRight"
                android:layout_toRightOf="@+id/textViewCam"
                android:layout_centerVertical="true"
                android:text="R" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonShutdown"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="shutdown"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>